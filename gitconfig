[alias]
	st = status -sb
	c = commit
	br = branch
	co = checkout
	df = diff --name-status
	files = "!f() { git difftool --name-status $1; }; f"
	pull = pull --ff
	reup = rebase-update
	gr = log --graph --oneline --decorate --all
	d = difftool
	dt = difftool
	dc = difftool --cached
	clone = clone --recursive
	alias = config --get-regexp 'alias.*'
  ignored = !git ls-files -v | grep "^[[:lower:]]"
  assumed = !git ls-files -v | grep "^[[:lower:]]"
  assume = update-index --assume-unchanged
	ignore = update-index --assume-unchanged
  unassume = update-index --no-assume-unchanged
	unignore = update-index --no-assume-unchanged
  r = rebase
  rc = rebase --continue
  ra = rebase --abort
  rs = rebase --skip
	fix = !$EDITOR `git diff --name-only | uniq`
  cot = checkout --theirs
  com = checkout --mine
  delbranch = push origin --delete
	user = "!f() { git config user.email `git config --get user.$1.email`; }; f"

[rerere]
	enabled = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[color "diff"]
	whitespace = red reverse
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto

[core]
	excludesfile = ~/.gitignore
	editor = atom --wait
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[apply]
	whitespace = nowarn

[help]
	autocorrect = 1

[branch]
	autosetuprebase = always

[push]
	default = tracking

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[mergetool]
	prompt = false

[credential]
	helper = osxkeychain
